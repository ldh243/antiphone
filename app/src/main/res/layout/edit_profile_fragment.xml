<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/portrait_1" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Basic information"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtNameEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:drawablePadding="16dp"
            android:hint="Name"
            android:inputType="text"
            android:lineHeight="40dp"
            android:maxLines="1"
            android:text="Kelly Sikkema"
            android:textColor="#686868"
            android:textColorHint="@color/colorTextSecondary"
            android:textSize="16sp"
            android:theme="@style/EditTextTheme" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Date of birth"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtDobEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:drawablePadding="16dp"
            android:hint="Day of birth"
            android:inputType="text"
            android:lineHeight="40dp"
            android:maxLines="1"
            android:text="29.04.1997"
            android:textColor="#686868"
            android:textColorHint="@color/colorTextSecondary"
            android:textSize="16sp"
            android:theme="@style/EditTextTheme" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Private information"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Phone"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/txtPhoneEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:drawablePadding="16dp"
            android:hint="Phone number"
            android:inputType="text"
            android:lineHeight="40dp"
            android:maxLines="1"
            android:text="0123 456 789"
            android:textColor="#686868"
            android:textColorHint="@color/colorTextSecondary"
            android:textSize="16sp"
            android:theme="@style/EditTextTheme" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Location"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/txtLocationEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:drawablePadding="16dp"
            android:hint="Location"
            android:inputType="text"
            android:lineHeight="40dp"
            android:textSize="16sp"
            android:maxLines="1"
            android:text="Viet Nam"
            android:textColor="#686868"
            android:textColorHint="@color/colorTextSecondary"
            android:theme="@style/EditTextTheme" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Gender"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/txtGenderEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:drawablePadding="16dp"
            android:hint="Gender"
            android:inputType="text"
            android:textSize="16sp"
            android:lineHeight="40dp"
            android:maxLines="1"
            android:text="Female"
            android:textColor="#686868"
            android:textColorHint="@color/colorTextSecondary"
            android:theme="@style/EditTextTheme" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSaveEdit"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_save_edit_profile"
        android:text="SAVE"
        android:textColor="@color/white" />

</LinearLayout>
