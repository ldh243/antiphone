<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".login_logout.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:background="@color/colorPrimaryCyan"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="8"
            android:src="@drawable/logo_antiphone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="6.5"
        android:foregroundGravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="10">

        <EditText
            android:id="@+id/edtEmailSignup"
            android:layout_width="268dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:drawablePadding="16dp"
            android:hint="Email"
            android:inputType="text"
            android:lineHeight="40dp"
            android:maxLines="1"
            android:text="abc123@gmail.com"
            android:textColor="@color/colorTextPrimary"
            android:textColorHint="@color/colorTextSecondary"
            android:theme="@style/EditTextTheme" />


        <EditText
            android:id="@+id/edtNameSignup"
            android:layout_width="268dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawablePadding="16dp"
            android:hint="Name"
            android:inputType="text"
            android:lineHeight="40dp"
            android:maxLines="1"
            android:textColor="@color/colorTextPrimary"
            android:textColorHint="@color/colorTextSecondary"
            android:theme="@style/EditTextTheme"
            android:text="Text name"/>


        <EditText
            android:id="@+id/edtPasswordSignup"
            android:layout_width="268dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawablePadding="16dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:lineHeight="40dp"
            android:maxLines="1"
            android:textColor="@color/colorTextPrimary"
            android:textColorHint="@color/colorTextSecondary"
            android:theme="@style/EditTextTheme"
            android:text="123123"
            />


        <EditText
            android:id="@+id/edtPasswordConfirmSignup"
            android:layout_width="268dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawablePadding="16dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:lineHeight="40dp"
            android:maxLines="1"
            android:textColor="@color/colorTextPrimary"
            android:textColorHint="@color/colorTextSecondary"
            android:theme="@style/EditTextTheme"
            android:text="123123"
            />

        <Button
            android:id="@+id/btnSignupSignup"
            android:layout_width="268dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_go"
            android:text="Sign up"
            android:textColor="@color/white" />

        <RelativeLayout
            android:id="@+id/seperateSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:text="ALREADY HAVE AN ACCOUNT"
                android:textColor="@color/grey"
                android:textSize="11dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toLeftOf="@id/tvText"
                android:background="@color/grey" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/tvText"
                android:background="@color/grey" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnLoginSignup"
            android:layout_width="268dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_go"
            android:text="Login"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>