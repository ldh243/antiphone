<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:elevation="0dp"
        android:id="@+id/appBarId">
    </android.support.design.widget.AppBarLayout>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabLayoutCart"
        android:background="@drawable/tab_layout_underline"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabTextColor="@color/grey"
        app:tabSelectedTextColor="@color/black"
        app:tabIndicatorColor="#ff3f69"
        app:tabTextAppearance="@style/TabLayoutStyle"
        android:outlineSpotShadowColor="@color/grey"

        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="46dp"
        android:padding="16dp"
        >
    </android.support.v4.view.ViewPager>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.bottomappbar.BottomAppBar
            android:id="@+id/btnAppBarProfile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:paddingTop="7dp"
            android:backgroundTintMode="add"
            android:backgroundTint="#FFF8F8F6"
            >

        </android.support.design.bottomappbar.BottomAppBar>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fapProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#607D8B"
            android:src="@drawable/ic_vibration_black_24dp"
            app:borderWidth="0dp"
            app:fabCustomSize="67dp"
            app:layout_anchor="@id/btnAppBarProfile"
            app:maxImageSize="33dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_person_grey_24dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="15dp"

            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ic_shopping_basket_black_24dp"
            />

    </android.support.design.widget.CoordinatorLayout>

</android.support.design.widget.CoordinatorLayout>
